<!-- res/layout/activity_start.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#0000FF"> <!-- This is the Blue background -->

    <!-- This is to TextView to display the project title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD JUGGERNAUT"
        android:textSize="24sp"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginBottom="50dp" />

    <!-- This is the Button to continue to the next screen which is MainActivity -->
    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:padding="10dp" />
</LinearLayout>